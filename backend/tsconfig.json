{
  "include": [
    "./env.d.ts",
    "**/*",
    "index.d.ts",
    "**/*.vue"
  ],
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2021",
    "verbatimModuleSyntax": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
